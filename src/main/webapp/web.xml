
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>myshop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <!--Users-->
    <servlet>
        <servlet-name>myprofile</servlet-name>
        <servlet-class>myshop.controllers.user.MyProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myprofile</servlet-name>
        <url-pattern>/myprofile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>myshop.controllers.user.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>myshop.controllers.user.RegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>myshop.controllers.user.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>myshop.controllers.user.UnLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>inject</servlet-name>
        <servlet-class>myshop.controllers.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inject</servlet-name>
        <url-pattern>/injection</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>myshop.controllers.user.UserDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myBucket</servlet-name>
        <servlet-class>myshop.controllers.bucket.UserBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myBucket</servlet-name>
        <url-pattern>/mybucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bucketCleaner</servlet-name>
        <servlet-class>myshop.controllers.bucket.UserBucketCleanerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bucketCleaner</servlet-name>
        <url-pattern>/mybucket/clean</url-pattern>
    </servlet-mapping>

    <!--Products-->

    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>myshop.controllers.product.ProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>productCreater</servlet-name>
        <servlet-class>myshop.controllers.product.ProductCreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productCreater</servlet-name>
        <url-pattern>/products/create</url-pattern>
    </servlet-mapping>
    <!--Buckets-->
    <servlet>
        <servlet-name>allBuckets</servlet-name>
        <servlet-class>myshop.controllers.bucket.BucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allBuckets</servlet-name>
        <url-pattern>/buckets</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>myshop.controllers.bucket.BucketsAddProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>
<!--    orders-->
    <servlet>
        <servlet-name>order</servlet-name>
        <servlet-class>myshop.controllers.order.OrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
<!--    denies-->
    <servlet>
        <servlet-name>denies</servlet-name>
        <servlet-class>myshop.controllers.denies.DeniesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>denies</servlet-name>
        <url-pattern>/denied</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>myshop.web.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>authorizationFilter</filter-name>
        <filter-class>myshop.web.filters.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>